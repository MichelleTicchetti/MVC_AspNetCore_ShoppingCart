
@model IEnumerable<Carrito_A.Models.Sucursal>


<div>
    <h2 class="mt-3 mb-3">Seleccione sucursal para finalizar su compra</h2>
    @foreach (Sucursal s in Model)
    {
        <a class="btn btn-info" asp-action="FinalizarCompra" asp-controller="Compras" asp-route-carritoId=@ViewBag.Carrito.Id asp-route-sucursalId=@s.Id><span>@s.Nombre, @s.Direccion</span></a>
    }
</div>
