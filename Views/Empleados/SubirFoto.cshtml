@model Representacion
@{
    ViewData["Title"] = "Actualizar Foto";
}

<h1>@ViewData["Title"]</h1>

@{
    <div class="row">
        <div class="col-md-12">
            <form method="post" enctype="multipart/form-data">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Imagen" class="control-label"></label>

                    <div class="custom-file">
                        <input asp-for="Imagen" class="form-control custom-file-input" />
                        <label class="custom-file-label">@AliasGUI.SeleccionarImagen</label>
                    </div>
                </div>

                <div class="form-group row">
                    <input type="submit" value="@AliasGUI.SubirImagen" class="btn btn-primary" />
                </div>

                @section Scripts {
                    <script>
                        $(document).ready(function() {
                            $('.custom-file-input').on("change", function() {
                                var filename = $(this).val().split("\\").pop();
                                $(this).next('.custom-file-label').html(filename);
                            })
                        });
                    </script>
                }
            </form>
        </div>
    </div>
    <form asp-action="EliminarFoto" asp-controller="Empleados">
        <div class="form-group row">
            <button type="submit" class="btn btn-danger">
                @AliasGUI.EliminarImagen
            </button>
        </div>
    </form>
}