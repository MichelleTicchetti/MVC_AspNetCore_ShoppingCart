@model Carrito_A.Models.Cliente

@{
    ViewData["Title"] = @AliasGUI.Details;
}

<h1>Detalles</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-lg-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaAlta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaAlta)
            </dd>
        </dl>
        <div>
            <h5>Contacto</h5>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Direccion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Direccion.DireccionCompleta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono.TelefonoCompleto)
            </dd>
        </div>
    </div>

    <div class="col-lg-6">
        @{
            var foto = "~/img/fotos/clientes/" + Model.Foto;
        }
        <img src="@foto" class="img-fluid round mt-1" alt="Foto del cliente." width="250px" height="200px" asp-append-version="true">
        <a class="btn btn-secondary btn-sm text-white mb-2" asp-controller="Clientes" asp-action="SubirFoto" asp-route-id="@Model.Id">Actualizar Foto</a>
    </div>
</div>
<div>
    <a class="btn btn-secondary btn-sm text-white mb-2" asp-action="EditarDireccionTelefono" asp-route-id="@Model.Id">Editar datos de contacto</a>
</div>